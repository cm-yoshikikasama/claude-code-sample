{
  "model": "Opus",
  "outputStyle": "Explanatory",
  "plansDirectory": ".claude/plans",
  "extraKnownMarketplaces": {
    "cm-kasama-plugins": {
      "source": {
        "source": "directory",
        "path": "/Users/kasama.yoshiki/Documents/git/claude-code-sample"
      }
    }
  },
  "enabledPlugins": {
    "typescript-lsp@claude-plugins-official": true,
    "pyright-lsp@claude-plugins-official": true,
    "aws-cdk-workflow@cm-kasama-plugins": true
  },
  "env": {
    "CLAUDE_CODE_ENABLE_TELEMETRY": "0",
    "BASH_DEFAULT_TIMEOUT_MS": "120000",
    "CLAUDE_BASH_MAINTAIN_PROJECT_WORKING_DIR": "1"
  },
  "permissions": {
    "allow": [
      "Bash(ls *)",
      "Bash(cat *)",
      "Bash(find *)",
      "Bash(tree *)",
      "Bash(head *)",
      "Bash(tail *)",
      "Bash(echo *)",
      "Bash(pwd)",
      "Bash(cd *)",
      "Bash(mkdir *)",
      "Bash(mv *)",
      "Bash(cp *)",
      "Bash(touch *)",
      "Bash(which *)",
      "Bash(env)",
      "Bash(whoami)",
      "Bash(date)",
      "Bash(grep *)",
      "Bash(yamllint *)",
      "Bash(git *)",
      "Bash(pnpm *)",
      "Bash(aws configure *)",
      "Bash(aws sts assume-role *)",
      "Read(./**)",
      "Edit(./**)",
      "Grep(./**)",
      "Glob(./**)",
      "Write(./**)",
      "Task",
      "Skill",
      "WebFetch(domain:docs.aws.amazon.com)",
      "WebFetch(domain:*.amazonaws.com)",
      "WebFetch(domain:github.com)",
      "WebFetch(domain:*.github.io)",
      "WebFetch(domain:anthropic.com)",
      "WebFetch(domain:*.anthropic.com)",
      "WebFetch(domain:zenn.dev)",
      "WebFetch(domain:qiita.com)",
      "mcp__aws-diagram-mcp-server__*",
      "mcp__context7__*"
    ],
    "deny": [
      "Bash(git add *)",
      "Bash(git commit *)",
      "Bash(git push *)",
      "Bash(git pull *)",
      "Bash(git merge *)",
      "Bash(git rebase *)",
      "Bash(git reset *)",
      "Bash(git checkout *)",
      "Bash(git switch *)",
      "Bash(rm -rf *)",
      "Bash(rm /*)",
      "Bash(sudo *)",
      "Bash(* cdk deploy *)",
      "Bash(* cdk destroy *)"
    ]
  },
  "statusLine": {
    "type": "command",
    "command": ".claude/statusline/statusline.sh"
  },
  "hooks": {
    "SubagentStop": [
      {
        "matcher": "",
        "hooks": [
          {
            "type": "prompt",
            "prompt": "Review the subagent output. Verify: 1) Task completion 2) Code quality 3) CLAUDE.md compliance. If issues exist, provide specific feedback."
          }
        ]
      }
    ],
    "Notification": [
      {
        "matcher": "",
        "hooks": [
          {
            "type": "command",
            "command": "afplay /System/Library/Sounds/Funk.aiff"
          }
        ]
      }
    ],
    "Stop": [
      {
        "matcher": "",
        "hooks": [
          {
            "type": "command",
            "command": "afplay /System/Library/Sounds/Funk.aiff"
          }
        ]
      }
    ]
  }
}
